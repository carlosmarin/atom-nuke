            <xs:annotation>
               <xs:documentation>
                  <html:p>
                  </html:p>
               </xs:documentation>
            </xs:annotation>
         </xs:extension>
      </xs:complexContent>
   </xs:complexType>
   
   <xs:complexType name="Bindings">
      <xs:annotation>
         <xs:documentation>
            <html:p>
            </html:p>
         </xs:documentation>
      </xs:annotation>
        
      <xs:sequence>
         <xs:element name="listener" type="nuke:ListenerBinding" minOccurs="0" maxOccurs="unbounded" />
         <xs:element name="relay" type="nuke:RelayBinding" minOccurs="0" maxOccurs="unbounded" />
      </xs:sequence>
   </xs:complexType>
   
   <xs:complexType name="Binding">
      <xs:annotation>
         <xs:documentation>
            <html:p>
            </html:p>
         </xs:documentation>
      </xs:annotation>
                
      <xs:attribute name="id" type="xs:string" use="required">
         <xs:annotation>
            <xs:documentation>
               <html:p>
               </html:p>
            </xs:documentation>
         </xs:annotation>
      </xs:attribute>
   </xs:complexType>
   
   <xs:complexType name="ListenerBinding">
      <xs:complexContent>
         <xs:extension base="nuke:Binding">
            <xs:annotation>
               <xs:documentation>
                  <html:p>
                  </html:p>
               </xs:documentation>
            </xs:annotation>
            
            <xs:attribute name="source-id" type="xs:string" use="required">
               <xs:annotation>
                  <xs:documentation>
