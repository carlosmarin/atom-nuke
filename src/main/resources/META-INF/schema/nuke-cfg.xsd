         </xs:documentation>
      </xs:annotation>
      
      <xs:sequence>
         <xs:element name="relay" type="nuke:Relay" minOccurs="0" maxOccurs="unbounded" />
      </xs:sequence>
   </xs:complexType>
   
   <xs:complexType name="Relay">
      <xs:annotation>
         <xs:documentation>
            <html:p>
            </html:p>
         </xs:documentation>
      </xs:annotation>
                      
