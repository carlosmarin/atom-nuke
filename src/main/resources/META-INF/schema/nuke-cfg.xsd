                     </html:p>
                  </xs:documentation>
               </xs:annotation>
            </xs:attribute>
            
            <xs:attribute name="listener-id" type="xs:string" use="required">
               <xs:annotation>
                  <xs:documentation>
                     <html:p>
                     </html:p>
                  </xs:documentation>
               </xs:annotation>
            </xs:attribute>
         </xs:extension>
      </xs:complexContent>
   </xs:complexType>
   
