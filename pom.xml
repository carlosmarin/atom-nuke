
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
   <modelVersion>4.0.0</modelVersion>

   <groupId>net.jps.nuke</groupId>
   <artifactId>nuke</artifactId>
   <version>0.1.0-SNAPSHOT</version>
   
   <packaging>jar</packaging>

   <name>nuke</name>
   <url>https://github.com/zinic/atom-nuke</url>

   <description>
      Nuke is a simple ATOM implementation built ontop of a SAX parser and a StAX
      writer designed for simplicity, immutibility and memory efficiency. The
      project also aspires to maintain a minimal dependency footprint.
   </description>

   <properties>
      <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
      <project.license>apache20</project.license>
   </properties>

   <licenses>
      <license>
         <name>Apache License, Version 2.0</name>
         <url>http://www.apache.org/licenses/LICENSE-2.0</url>
      </license>
   </licenses>

   <scm>
      <connection>scm:git:ssh://git@github.com/zinic/atom-nuke.git</connection>
   </scm>
    
   <repositories>
      <repository>
         <id>public.maven.research.rackspace.com</id>
            
         <name>Rackspace Research</name>
         <url>http://maven.research.rackspacecloud.com/content/groups/aggregate</url>
      </repository>
   </repositories>

   <distributionManagement>
      <repository>
         <id>releases.maven.research.rackspace.com</id>
 
         <name>Rackspace Research Releases</name>
         <url>http://maven.research.rackspacecloud.com/content/repositories/releases</url>
      </repository>
        
      <snapshotRepository>
         <id>snapshots.maven.research.rackspace.com</id>

         <name>Rackspace Research Snapshots</name>
         <url>http://maven.research.rackspacecloud.com/content/repositories/snapshots</url>
      </snapshotRepository>
   </distributionManagement>
   
   <dependencies>
      <dependency>
         <groupId>xerces</groupId>
         <artifactId>xercesImpl</artifactId>
         <version>2.10.0</version>
      </dependency>
      
      <dependency>
         <groupId>xalan</groupId>
         <artifactId>xalan</artifactId>
         <version>2.7.1</version>
      </dependency>
      
      <dependency>
         <groupId>org.codehaus.woodstox</groupId>
         <artifactId>woodstox-core-asl</artifactId>
         <version>4.1.3</version>
      </dependency>
      
      <dependency>
         <groupId>org.apache.httpcomponents</groupId>
         <artifactId>httpclient</artifactId>
         <version>4.2</version>
      </dependency>
      
      <dependency>
         <groupId>org.apache.commons</groupId>
         <artifactId>commons-lang3</artifactId>
         <version>3.1</version>
      </dependency>

      <dependency>
         <groupId>org.apache.hadoop</groupId>
         <artifactId>hadoop-core</artifactId>
         <version>1.0.3</version>
      </dependency>
         
      <dependency>
         <groupId>org.apache.hadoop</groupId>
         <artifactId>hadoop-client</artifactId>
         <version>1.0.3</version>
      </dependency>
         
      <dependency>
         <groupId>com.rackspace.papi.commons</groupId>
         <artifactId>utilities</artifactId>
         <version>2.1.1</version>
      </dependency>
      
      <dependency>
         <groupId>junit</groupId>
         <artifactId>junit</artifactId>
         <version>4.10</version>
         <scope>test</scope>
      </dependency>
   </dependencies>
</project>
